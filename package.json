{
  "name": "brsdemo",
  "version": "1.0.0",
  "type": "module",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "NODE_OPTIONS=--loader=ts-node/esm hardhat test",
    "test:all": "bash scripts/test-all.sh",
    "test:quick": "bash scripts/test-all.sh --quick",
    "test:hardhat": "hardhat test",
    "test:forge": "forge test --match-path 'forge-test/unit/*.sol' --no-match-test 'testPCEDeviationLimit' && forge test --match-path 'forge-test/integration/*.sol'",
    "test:fuzz": "forge test --match-path 'forge-test/fuzz/*.sol' --fuzz-runs 512 -vvv",
    "test:fuzz:quick": "forge test --match-path 'forge-test/fuzz/*.sol' --fuzz-runs 64 -v",
    "test:invariant": "forge test --match-path 'forge-test/invariant/*.sol' -vvv",
    "test:unit": "forge test --match-path 'forge-test/unit/*.sol' --no-match-test 'testPCEDeviationLimit' -vvv",
    "test:integration": "forge test --match-path 'forge-test/integration/*.sol' -vvv",
    "test:gas": "REPORT_GAS=true hardhat test",
    "test:coverage": "forge coverage --report summary --no-match-test 'testPCEDeviationLimit'",
    "compile": "hardhat compile",
    "compile:forge": "forge build",
    "clean": "hardhat clean && forge clean",
    "lint": "npm run lint:sol && npm run lint:js",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "lint:js": "eslint 'test/**/*.ts' 'scripts/**/*.{js,mjs,ts}'",
    "lint:fix": "npm run lint:sol:fix && npm run lint:js:fix",
    "lint:sol:fix": "solhint 'contracts/**/*.sol' --fix",
    "lint:js:fix": "eslint 'test/**/*.ts' 'scripts/**/*.{js,mjs,ts}' --fix",
    "formal": "bash scripts/formal-verify.sh",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy.js --network sepolia",
    "deploy:mainnet": "hardhat run scripts/deploy.js --network mainnet",
    "verify:sepolia": "hardhat run scripts/verify.js --network sepolia",
    "verify:mainnet": "hardhat run scripts/verify.js --network mainnet",
    "node": "hardhat node",
    "size": "hardhat size-contracts",
    "local:deploy": "hardhat ignition deploy ignition/modules/FullSystem.ts --network localhost",
    "local:init": "hardhat run scripts/main/init-full-system.mjs --network localhost",
    "local:guardian": "node scripts/main/guardian.mjs",
    "local:price-sync": "node scripts/main/price-sync.mjs",
    "sepolia:deploy-full": "bash scripts/sepolia/deploy-full.sh",
    "sepolia:deploy": "hardhat ignition deploy ignition/modules/FullSystemSepolia.ts --network sepolia",
    "sepolia:init": "hardhat run scripts/sepolia/init-sepolia.mjs --network sepolia",
    "sepolia:warmup-twap": "hardhat run scripts/sepolia/warmup-twap.mjs --network sepolia",
    "sepolia:faucet": "hardhat run scripts/sepolia/faucet.mjs --network sepolia",
    "sepolia:health-check": "hardhat run scripts/sepolia/health-check.mjs --network sepolia",
    "sepolia:price-sync": "hardhat run scripts/sepolia/price-sync.mjs --network sepolia",
    "update:interface": "node scripts/main/update-interface-config.mjs"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^4.0.3",
    "@nomicfoundation/hardhat-ignition": "^3.0.5",
    "@nomicfoundation/hardhat-ignition-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-ignition-viem": "^3.0.5",
    "@nomicfoundation/hardhat-keystore": "^3.0.3",
    "@nomicfoundation/hardhat-network-helpers": "^3.0.3",
    "@nomicfoundation/hardhat-node-test-runner": "^3.0.7",
    "@nomicfoundation/hardhat-toolbox-viem": "^5.0.1",
    "@nomicfoundation/hardhat-verify": "^3.0.7",
    "@nomicfoundation/hardhat-viem": "^3.0.1",
    "@nomicfoundation/hardhat-viem-assertions": "^3.0.4",
    "@nomicfoundation/ignition-core": "^3.0.5",
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "chai": "^4.5.0",
    "eslint": "^8.57.1",
    "ethers": "^6.15.0",
    "hardhat": "^3.0.14",
    "hardhat-gas-reporter": "^2.3.0",
    "mocha": "^11.7.5",
    "solhint": "^5.2.0",
    "solidity-coverage": "github:sc-forks/solidity-coverage#master",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@chainlink/contracts": "^1.4.0",
    "@chainlink/functions-toolkit": "^0.3.2",
    "@openzeppelin/community-contracts": "github:OpenZeppelin/openzeppelin-community-contracts",
    "@openzeppelin/contracts": "^5.4.0",
    "@openzeppelin/contracts-upgradeable": "^5.4.0",
    "@uniswap/v2-core": "^1.0.1",
    "dotenv": "^17.2.2",
    "viem": "^2.39.0"
  },
  "overrides": {
    "@openzeppelin/contracts": "^5.4.0",
    "@openzeppelin/contracts-upgradeable": "^5.4.0"
  }
}
